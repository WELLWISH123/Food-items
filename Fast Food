#include <stdio.h>
int main()
{
printf("Pick any food item:\n1. pizza\n2. burger\n3. pasta\n4. sandwich\n5. fries");
printf("\nprice :\n1. pizza=Rs.239\n2. burger=Rs.129\n3. pasta=Rs.179\n4. sandwich=Rs.149\n5. fries=Rs.99");
int choice=0;
scanf("%d",&choice);

switch(choice)
{
case 1:
printf("you picked Pizza.\n");
break;
case 2:
printf("you picked burger.\n");
break;
case 3:
printf("you picked pasta.\n");
break;
case 4:
printf("you picked sandwich.\n");
break;
case 5:
printf("you picked fries.\n");
break;
default:
printf("invalid choice");
}
}
